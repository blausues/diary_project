<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="60dp"
    android:background="@drawable/list_add_border">

    <LinearLayout
        android:id="@+id/list_left_panel"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="7dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_add_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01월 23일"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/list_add_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="금연"
            android:textColor="#FFFF4500"
            android:textSize="14dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/list_right_panel"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:paddingRight="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/list_left_panel">

        <ImageView
            android:id="@+id/list_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/selector_add_writediary" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>