<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="60dp"
    android:padding="8dp"
    android:background="@drawable/list_add_border"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/list_left_panel"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="vertical">
    <TextView
        android:id="@+id/list_add_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01월 23일"
        android:textSize="15dp"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:text="금연"
        android:textSize="14dp"
        android:textStyle="bold"
        android:textColor="#FFFF4500"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/list_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/selector_add_writediary"
        app:layout_constraintLeft_toRightOf="@+id/list_left_panel"
        app:layout_constraintRight_toRightOf="parent"
        />
</android.support.constraint.ConstraintLayout>