<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:gravity="center_horizontal">

    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:background="@drawable/list_add_border">

        <LinearLayout
            android:id="@+id/list_left_panel"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/list_add_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01월 23일"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/list_add_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="금연"
                android:textColor="#FFFF4500"
                android:textSize="14dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/list_right_panel"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:paddingRight="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/list_left_panel"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/list_plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/selector_add_writediary" />
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>
</LinearLayout>