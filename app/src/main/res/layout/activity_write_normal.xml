<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/write_normal"
    >

    <RelativeLayout
        android:id="@+id/write_normal_top_panel"
        android:layout_width="0sp"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toTopOf="@+id/write_normal_center_panel"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="2018년 1월 1일"
            android:id="@+id/tv_write_normal_date"
            />
        <EditText
            android:id="@+id/et_wirte_normal"
            android:layout_below="@+id/tv_write_normal_date"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="top"
            android:textCursorDrawable="@drawable/cursor_color"
            />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/write_normal_center_panel"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/iv_write_normal_plusImage0"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:scaleType="fitXY"
            />
        <ImageView
            android:id="@+id/iv_write_normal_plusImage1"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:scaleType="fitXY"
            />
        <ImageView
            android:id="@+id/iv_write_normal_plusImage2"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:scaleType="fitXY"
            />
        <ImageView
            android:id="@+id/iv_write_normal_plusImage3"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:scaleType="fitXY"
            />
        <ImageView
            android:id="@+id/iv_write_normal_plusImage4"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:scaleType="fitXY"
            />
        <ImageView
            android:id="@+id/iv_write_normal_plusImage5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            />

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/write_normal_bottom_panel"
        android:orientation="horizontal"
        android:visibility="gone"
        >

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_normal_write_now"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="12dp"
            android:background="#00ff0000"
            android:src="@drawable/ic_access_time_black_24dp"
            android:layout_alignParentLeft="true"/>
        <ImageButton
            android:id="@+id/ib_select_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="#00ff0000"
            android:src="@drawable/selector_photo" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SAVE"
            android:id="@+id/btn_normal_write_save"
            android:background="#00ff0000"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>


</android.support.constraint.ConstraintLayout>