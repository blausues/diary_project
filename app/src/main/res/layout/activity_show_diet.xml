<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_diet_whole">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_group_diet_write">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="2017년 12월 6일"
                android:textSize="25dp"
                android:textStyle="bold"
                android:id="@+id/tv_diet_writedate"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="5px"
                android:layout_margin="10dp"
                android:background="#D8D8D8" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="체중"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:layout_alignBaseline="@id/tv_kg"
                    android:layout_toLeftOf="@id/tv_kg"
                    android:visibility="visible"
                    android:id="@+id/tv_diet_weight"/>

                <EditText
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:layout_alignBaseline="@id/tv_kg"
                    android:layout_toLeftOf="@id/tv_kg"
                    android:visibility="gone"
                    android:inputType="numberDecimal"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:id="@+id/edit_diet_weight"/>

                <TextView
                    android:id="@+id/tv_kg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="kg"
                    android:textSize="15dp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="아침"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/tv_kcal1"
                    android:textSize="15dp"
                    android:layout_toLeftOf="@id/tv_kcal1"
                    android:visibility="visible"
                    android:id="@+id/tv_diet_kcal1"/>

                <EditText
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/tv_kcal1"
                    android:textSize="15dp"
                    android:layout_toLeftOf="@id/tv_kcal1"
                    android:visibility="gone"
                    android:inputType="numberDecimal"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:id="@+id/edit_diet_kcal1"/>

                <TextView
                    android:id="@+id/tv_kcal1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="kcal"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_below="@id/tv_kcal1"
                    android:textSize="15dp"
                    android:visibility="visible"
                    android:id="@+id/tv_diet_menu1"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_below="@id/tv_kcal1"
                    android:textSize="15dp"
                    android:hint="먹은 식단"
                    android:visibility="gone"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:id="@+id/edit_diet_menu1"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="점심"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/tv_kcal2"
                    android:textSize="15dp"
                    android:layout_toLeftOf="@id/tv_kcal2"
                    android:visibility="visible"
                    android:id="@+id/tv_diet_kcal2"/>

                <EditText
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/tv_kcal2"
                    android:textSize="15dp"
                    android:layout_toLeftOf="@id/tv_kcal2"
                    android:visibility="gone"
                    android:inputType="numberDecimal"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:id="@+id/edit_diet_kcal2"/>

                <TextView
                    android:id="@+id/tv_kcal2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="kcal"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_below="@id/tv_kcal2"
                    android:textSize="15dp"
                    android:visibility="visible"
                    android:id="@+id/tv_diet_menu2"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_below="@id/tv_kcal2"
                    android:textSize="15dp"
                    android:hint="먹은 식단"
                    android:visibility="gone"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:id="@+id/edit_diet_menu2"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="저녁"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/tv_kcal3"
                    android:textSize="15dp"
                    android:layout_toLeftOf="@id/tv_kcal3"
                    android:visibility="visible"
                    android:id="@+id/tv_diet_kcal3"/>

                <EditText
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/tv_kcal3"
                    android:textSize="15dp"
                    android:layout_toLeftOf="@id/tv_kcal3"
                    android:visibility="gone"
                    android:inputType="numberDecimal"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:id="@+id/edit_diet_kcal3"/>

                <TextView
                    android:id="@+id/tv_kcal3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="kcal"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_below="@id/tv_kcal3"
                    android:textSize="15dp"
                    android:visibility="visible"
                    android:id="@+id/tv_diet_menu3"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_below="@id/tv_kcal3"
                    android:textSize="15dp"
                    android:hint="먹은 식단"
                    android:visibility="gone"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:id="@+id/edit_diet_menu3"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp">

                <TextView
                    android:id="@+id/tv_memo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="메모"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_memo"
                    android:textSize="15dp"
                    android:visibility="visible"
                    android:id="@+id/tv_diet_memo"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_memo"
                    android:textSize="15dp"
                    android:visibility="gone"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:id="@+id/edit_diet_memo"/>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/layout_diet_iv"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_diet_plusImage0"
                    android:layout_width="50dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:scaleType="fitXY"/>
                <ImageView
                    android:id="@+id/iv_diet_plusImage1"
                    android:layout_width="50dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:scaleType="fitXY"/>
                <ImageView
                    android:id="@+id/iv_diet_plusImage2"
                    android:layout_width="50dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:scaleType="fitXY"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/btn_group_diet_write">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_diet_kcal_table"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="12dp"
            android:background="#00ff0000"
            android:visibility="gone"
            android:src="@drawable/ic_info_outline_black_24dp"
            android:layout_alignParentLeft="true"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_diet_picture"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="12dp"
            android:background="#00ff0000"
            android:visibility="gone"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_add_a_photo_black_24dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SAVE"
            android:id="@+id/btn_diet_save"
            android:background="#00ff0000"
            android:visibility="gone"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>