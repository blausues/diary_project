<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_group_nosmoking_write">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="2017년 12월 6일"
                android:textSize="25dp"
                android:textStyle="bold"
                android:id="@+id/tv_nosmoking_write_writedate"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="5px"
                android:layout_margin="10dp"
                android:background="#D8D8D8"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:text="금연시작 2018년 12월 1일 D+30"
                    android:id="@+id/tv_nosmoking_write_startdate"
                    android:layout_alignParentLeft="true"
                    android:layout_alignBaseline="@id/check_nosmoking_write_giveup"/>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="그만하기"
                    android:id="@+id/check_nosmoking_write_giveup"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>

            <EditText
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/edit_nosmoking_write_promise"
                android:background="@drawable/border"
                android:padding="5dp"
                android:textSize="14sp"
                android:gravity="left"
                android:inputType="textMultiLine|textNoSuggestions|textVisiblePassword"/>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/btn_group_nosmoking_write">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_nosmoking_write_now"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="12dp"
            android:background="#00ff0000"
            android:src="@drawable/ic_access_time_black_24dp"
            android:layout_alignParentLeft="true"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SAVE"
            android:id="@+id/btn_nosmoking_write_save"
            android:background="#00ff0000"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>